<%layout("/layouts/boilerplate.ejs")%>
<style>
    #filters {
        display: flex;
        flex-wrap:wrap;
    }
    .filter {
        text-align: center;
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter:hover {
        opacity: 1;
        cursor:pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-switch {
        border: 2px solid rgb(0, 0, 0, 0.7);
        margin-top: 1.4rem;
        border-radius: 4rem;
        height: 3.25rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        opacity: 0.7;
    }

    .tax-info{
        display:none;
    }
</style>
<body>
    
    <div id="filters" class="main">
            <div class="col filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>IconicCities</p>
            </div>
            <div class="col filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>AmazingPools</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beaches</p>
            </div>
            <div class="col filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Artic</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="col filter">
                <div><i class="fa-solid fa-water"></i></div>
                <p>LakeFront</p>
            </div>
        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>    
    </div>
    <div class="main row mt-2 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xsm-1 row-cols-xxs-1 ">
        <%for(listings of allListing){%>
    <a href="/listings/<%=listings._id%>" class="listing-link">
        <div class="card col listing-card" >
        <img src="<%=listings.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text">
                <b><%=listings.title%></b><br>
                &#8377;<%=listings.price.toLocaleString("en-IN") %> / night
                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
            </p>
        </div>
        </div>
    </a>    
    <%}%>
    </div>
    <script>
        let togler= document.getElementById("switchCheckDefault");
        togler.addEventListener("click" ,()=>{
            console.log("click");
            let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display !== "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
        })
    </script>
    
</body>

